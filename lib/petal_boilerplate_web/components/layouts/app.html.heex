<main>
  <.flash_group flash={@flash} />

  <nav class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center gap-6 h-16">
        <div class="flex-shrink-0">
          <span class="text-xl font-bold text-gray-900 dark:text-white">LLM Model DB</span>
        </div>
        <div class="flex-1 max-w-2xl">
          <form phx-change="filter" class="w-full">
            <.input
              type="text"
              name="search"
              value={assigns[:search_value] || ""}
              placeholder="Search models by provider, ID, name, or capabilities..."
              phx-debounce="150"
              class="w-full !h-10 !text-sm shadow-sm !bg-gray-50 dark:!bg-gray-700 dark:!border-gray-600"
            />
          </form>
        </div>
        <div class="flex items-center gap-4 flex-shrink-0">
          <a
            href="https://github.com/agentjido/llm_db"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              >
              </path>
            </svg>
          </a>
          <.color_scheme_switch />
        </div>
      </div>
    </div>
  </nav>

  <div class="pt-16">
    {@inner_content}
  </div>
</main>
